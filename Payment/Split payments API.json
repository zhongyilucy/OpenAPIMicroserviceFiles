{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Split payments API",
    "description": "API to manage payments with split payments"
  },
  "servers": [
    {
      "url": "https://sqbyng13v8.execute-api.us-east-1.amazonaws.com/dev"
    }
  ],
  "paths": {
    "/auth/sign-in": {
      "post": {
        "summary": "Login to split payment system",
        "description": "Login to split payment system",
        "operationId": "signIn",
        "requestBody": {
          "description": "Request body for creating a payment method",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "User email"
                  },
                  "password": {
                    "type": "string",
                    "description": "User password"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Failed to login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/sign-up": {
      "post": {
        "summary": "Create a split user",
        "description": "Create a split user",
        "operationId": "signUp",
        "requestBody": {
          "description": "Request body for creating a payment method",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Card attached successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Failed to attach payment method",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/payment/payment-method": {
      "post": {
        "summary": "Create a split payment method",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Create a split payment method",
        "operationId": "addPaymentMethod",
        "requestBody": {
          "description": "Request body for creating a payment method",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customerId": {
                    "type": "string",
                    "description": " customer ID (optional)"
                  },
                  "cardToken": {
                    "type": "string",
                    "description": "Card token generated by split"
                  }
                },
                "required": [
                  "customerId",
                  "cardToken"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Card attached successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Failed to attach payment method",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get payments methods",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Get payments methods",
        "operationId": "paymentMethods",
        "parameters": [
          {
            "in": "query",
            "name": "customerId",
            "description": "ID of the item to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved the items",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Items not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a split payment method",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Delete a split payment method",
        "operationId": "deletePaymentMethod",
        "requestBody": {
          "description": "Request body for deleting a payment method",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customerId": {
                    "type": "string",
                    "description": "customer ID"
                  },
                  "paymentMethodId": {
                    "type": "string",
                    "description": "payment method Id"
                  }
                },
                "required": [
                  "customerId",
                  "paymentMethodId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Payment method deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "404": {
            "description": "Item not found"
          }
        }
      }
    },
    "/payment/subscription": {
      "post": {
        "summary": "Create a new subscription",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Create a new Split subscription and store it in split database",
        "operationId": "createSubscription",
        "requestBody": {
          "description": "Request body for creating a subscription",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "description": "Email address of the customer"
                  },
                  "customerId": {
                    "type": "string",
                    "description": "Split customer ID"
                  },
                  "priceId": {
                    "type": "string",
                    "description": "Split price ID for the subscription plan"
                  }
                },
                "required": [
                  "customerId",
                  "email",
                  "priceId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully created a subscription",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Failed to create subscription",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/payment/split-payment": {
      "post": {
        "summary": "Create a split group payment with split payment to a costumer or merchant",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Create a new  subscription and store it in PostgreSQL",
        "operationId": "splitGroupPayment",
        "requestBody": {
          "description": "Request body for creating a subscription",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "string",
                    "description": "Amout to pay"
                  },
                  "recipients": {
                    "type": "object",
                    "description": "the list of the group memebers"
                  },
                  "destination": {
                    "type": "object",
                    "description": "The destitation object"
                  }
                },
                "required": [
                  "amount",
                  "recipients",
                  "destination"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Payment group created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Failed to create payment group",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/payment/chargesByCustomer": {
      "get": {
        "summary": "Return all the activities from a customer",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Return all the activities from a customer",
        "operationId": "chargesByCustomer",
        "parameters": [
          {
            "in": "query",
            "name": "customerId",
            "description": "ID of the item to retrieve",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully created a subscription",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Failed to create subscription",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/payment/createCharge": {
      "post": {
        "summary": "Send a single payment",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Send a single payment",
        "operationId": "createCharge",
        "requestBody": {
          "description": "Request body for creating a subscription",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "string",
                    "description": "Amout to pay"
                  },
                  "currency": {
                    "type": "string",
                    "description": "Currency format"
                  },
                  "customerId": {
                    "type": "string",
                    "description": "Customer Id to charge"
                  },
                  "paymentMethodId": {
                    "type": "string",
                    "description": "Id fo the payment method"
                  },
                  "description": {
                    "type": "string",
                    "description": "A description"
                  },
                  "destination": {
                    "type": "string",
                    "description": "Destination customer Id"
                  }
                },
                "required": [
                  "amount",
                  "recipients",
                  "destination"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully created a subscription",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "500": {
            "description": "Failed to create subscription",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/payment/set-default-payment": {
      "post": {
        "summary": "Set a default payment method",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Set a default payment method",
        "operationId": "setDefaultPayment",
        "requestBody": {
          "description": "Request body for creating a subscription",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "customerId": {
                    "type": "string",
                    "description": "customer ID"
                  },
                  "paymentMethodId": {
                    "type": "string",
                    "description": "payment method Id"
                  }
                },
                "required": [
                  "customerId",
                  "paymentMethodId"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Default payment method set successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          },
          "400": {
            "description": "Missing customerId or paymentMethodId",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}